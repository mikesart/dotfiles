[user]
    name = Michael Sartain
    email = mikesart@gmail.com

[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto
    ui = true

[color "branch"]
    remote = green bold
    upstream = green bold

[push]
    default = simple

[difftool]
    prompt = false

[difftool "vimdiff"]
    cmd = /usr/bin/vimdiff \"$LOCAL\" \"$REMOTE\"

[alias]
    lol = log --oneline --graph --decorate
    ls = log --pretty=format:"%C(yellow)%h%C(green)%d\\ %Creset%s%C(yellow)\\ [%cn]" --decorate
    ll = log --pretty=format:"%C(yellow)%h%C(green)%d\\ %Creset%s%C(yellow)\\ [%cn]" --decorate --numstat
    lds = log --pretty=format:"%C(yellow)%h\\ %ad%C(green)%d\\ %Creset%s%C(yellow)\\ [%cn]" --decorate --date=short
    ld = log --pretty=format:"%C(yellow)%h\\ %ad%C(green)%d\\ %Creset%s%C(yellow)\\ [%cn]" --decorate --date=relative
    filelog = log -u
    grep = grep -Ii
    cleanprojectfiles = clean -f -d --dry-run
    cleanignoredfiles = clean -X -f -d --dry-run

    ## http://durdn.com/blog/2012/11/22/must-have-git-aliases-advanced-examples/
    # Assume a file as unchanged
    assume = update-index --assume-unchanged
    # Unassume a file:
    unassume = update-index --no-assume-unchanged
    # Show assumed files:
    assumed = "!git ls-files -v | grep ^h | cut -c 3-"
    # Unassume all the assumed files:
    unassumeall = "!git assumed | xargs git update-index --no-assume-unchanged"
    # Assume all:
    assumeall = "!git st -s | awk {'print $2'} | xargs git assume"

    # Use "git up" instead of "git pull"...
    # http://stackoverflow.com/questions/15316601/in-what-cases-could-git-pull-be-harmful    
    up = "!git remote update -p; git merge --ff-only @{u}"

[diff]
    tool = vimdiff

